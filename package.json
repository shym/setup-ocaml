{
  "version": "2.0.8",
  "private": true,
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.ts\" --cache",
    "build:analysis": "ncc build src/analysis/index.ts --out=analysis --license=LICENSE.txt",
    "build:lint-doc": "ncc build src/lint-doc/index.ts --out=lint-doc --license=LICENSE.txt",
    "build:lint-fmt": "ncc build src/lint-fmt/index.ts --out=lint-fmt --license=LICENSE.txt",
    "build:lint-opam": "ncc build src/lint-opam/index.ts --out=lint-opam --license=LICENSE.txt",
    "build:setup-ocaml.index": "ncc build src/setup-ocaml/index.ts --license=LICENSE.txt",
    "build:setup-ocaml.post": "ncc build src/setup-ocaml/post.ts --out=dist/post --license=LICENSE.txt",
    "build": "npm-run-all -p 'build:**'"
  },
  "dependencies": {
    "@actions/cache": "3.0.6",
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "@actions/glob": "0.3.0",
    "@actions/http-client": "2.0.1",
    "@actions/io": "1.1.2",
    "@actions/tool-cache": "2.0.1",
    "@github/dependency-submission-toolkit": "1.2.8",
    "cheerio": "1.0.0-rc.12",
    "core-js": "3.27.1",
    "date-fns": "2.29.3",
    "packageurl-js": "1.0.0",
    "semver": "7.3.8",
    "strip-ansi": "7.0.1",
    "yaml": "2.2.1"
  },
  "devDependencies": {
    "@tsconfig/strictest": "1.0.2",
    "@types/node": "18.11.18",
    "@types/semver": "7.3.13",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "@vercel/ncc": "0.36.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "9.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3",
    "typescript": "4.9.4"
  }
}
